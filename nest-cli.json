{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "service-user": {
      "type": "application",
      "root": "apps/service-user",
      "entryFile": "main",
      "sourceRoot": "apps/service-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-user/tsconfig.app.json"
      }
    },
    "service-event": {
      "type": "application",
      "root": "apps/service-event",
      "entryFile": "main",
      "sourceRoot": "apps/service-event/src",
      "compilerOptions": {
        "tsConfigPath": "apps/service-event/tsconfig.app.json"
      }
    }
  },
  "compilerOptions": {
    "deleteOutDir": true
  }
}